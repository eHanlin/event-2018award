              ul(v-if='item.money') {{ bonus }}
                li {{ item.money }}
              ul(v-else='') {{ bonus }}
                li(v-for='mon in money') {{ mon }}
              ul {{ numbers }}
                li(v-if='item.number') {{ item.number }}
                li(v-else='') {{ number }}
            a(v-if="!item.cant", :href='item.url')(target='_blank')
              .btn_signup 我要報名
                .sign
              
        .row
          .col-sm-12
            h3.aw_subtitle 高中部
            hr
