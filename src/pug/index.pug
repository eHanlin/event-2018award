    section#section_awards
      .container#awards
        .row
          .col-sm-12
            h2.aw_title 申請資格
              .sun
        .row
          .col-sm-12
            h3.aw_subtitle 國中部
            hr
        .row
          details(:class="key", v-for="(item, key) in junior_data")
